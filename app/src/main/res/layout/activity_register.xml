<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_app"
    tools:context="com.lucerotech.aleksandrp.w8monitor.activity.LoginActivity">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_register_ok"
        android:layout_below="@+id/iv_logo_login"
        android:layout_centerInParent="true"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_25"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="?attr/icon_email_app"/>

                <EditText
                    android:id="@+id/et_email_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4"
                    android:layout_marginRight="@dimen/_4"
                    android:layout_toLeftOf="@+id/iv_delete_email"
                    android:layout_toRightOf="@+id/iv_icon_mail"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/your_email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/_36"
                    android:textColor="?attr/color_light_grey_app"
                    android:textColorHint="?attr/colorHint_app"
                    android:textSize="@dimen/_14sp"/>

                <ImageView
                    android:id="@+id/iv_delete_email"
                    android:layout_width="@dimen/_36"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_8"
                    android:src="?attr/icon_reset_app"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_center_line_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_8"
                android:background="?attr/colorBackgroundView_app"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="?attr/icon_password_app"/>

                <EditText
                    android:id="@+id/et_password_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4"
                    android:layout_marginRight="@dimen/_4"
                    android:layout_toLeftOf="@+id/iv_delete_password_register"
                    android:layout_toRightOf="@+id/iv_icon_password"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/_36"
                    android:textColor="?attr/color_light_grey_app"
                    android:textColorHint="?attr/colorHint_app"
                    android:textSize="@dimen/_14sp"/>

                <ImageView
                    android:id="@+id/iv_delete_password_register"
                    android:layout_width="@dimen/_36"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_8"
                    android:src="?attr/icon_reset_app"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_center_line_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_8"
                android:background="?attr/colorBackgroundView_app"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_repeat_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="?attr/icon_password_app"/>

                <EditText
                    android:id="@+id/et_repeat_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4"
                    android:layout_marginRight="@dimen/_4"
                    android:layout_toLeftOf="@+id/iv_delete_repeat_password_register"
                    android:layout_toRightOf="@+id/iv_icon_repeat_password"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/repeat_password"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/_36"
                    android:textColor="?attr/color_light_grey_app"
                    android:textColorHint="?attr/colorHint_app"
                    android:textSize="@dimen/_14sp"/>

                <ImageView
                    android:id="@+id/iv_delete_repeat_password_register"
                    android:layout_width="@dimen/_36"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_8"
                    android:src="?attr/icon_reset_app"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_center_line_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_8"
                android:background="?attr/colorBackgroundView_app"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_register_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom_login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_25"
        android:layout_marginTop="@dimen/_25"
        android:clickable="false"
        android:src="?attr/b_confirm_nonactive_app"/>


    <LinearLayout
        android:id="@+id/rl_bottom_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_36"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <ImageView
            android:id="@+id/ib_facebook_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16"
            android:layout_marginTop="@dimen/_16"
            android:layout_weight="1"
            android:src="?attr/b_facebook_app"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_36"
        android:src="?attr/logo_app"/>

    <RelativeLayout
        android:id="@+id/rl_progress_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_app"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/prog_bar_white"
            android:indeterminateDuration="1500"/>


    </RelativeLayout>

</RelativeLayout>
