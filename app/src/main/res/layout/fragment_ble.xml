<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.lucerotech.aleksandrp.w8monitor.profile.fragment.BLEFragment">

    <include layout="@layout/custom_toolbar"/>

    <include
        android:id="@+id/bottom_tab"
        layout="@layout/custom_toolbar_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_tab"
        android:layout_centerInParent="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="@string/turn_on_bluetooth"
            android:textColor="@color/color_light_text"/>

        <ImageView
            android:id="@+id/iv_ble_connect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:src="@drawable/scale_nonactive_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_25"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/select_profile1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/select_profile1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
