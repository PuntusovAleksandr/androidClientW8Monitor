<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark"
    tools:context="com.lucerotech.aleksandrp.w8monitor.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_logo_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25"
        android:src="@drawable/logo_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom_login"
        android:layout_below="@+id/iv_logo_login"
        android:layout_centerInParent="true"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_25"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wrong_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wrong_email_or_password"
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_login_dark"/>

                <EditText
                    android:id="@+id/et_login"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4"
                    android:layout_marginRight="@dimen/_4"
                    android:layout_toLeftOf="@+id/iv_delete_login"
                    android:layout_toRightOf="@+id/iv_icon_user"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/your_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/color_light_grey"
                    android:textColorHint="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/iv_delete_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_reset_dark"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_center_line_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_password_dark"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4"
                    android:layout_marginRight="@dimen/_4"
                    android:layout_toLeftOf="@+id/iv_delete_password"
                    android:layout_toRightOf="@+id/iv_icon_password"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/color_light_grey"
                    android:textColorHint="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/iv_delete_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_reset_dark"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_center_line_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8">

            <TextView
                android:id="@+id/tv_keep_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/keep_me_logged_in"
                android:textColor="@color/color_light_grey"/>

            <ImageView
                android:id="@+id/iv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_forgot_dark"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_keep_me"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/b_confirm_nonactive_dark"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_bottom_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_25"
        android:background="@color/color_dark_register"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/ib_facebook"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/b_facebook_dark"/>

        <ImageView
            android:id="@+id/ib_register"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/b_confirm_nonactive_dark"/>

        <ImageView
            android:id="@+id/ib_login"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/b_skip_dark"/>


    </LinearLayout>

</RelativeLayout>
