<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_app"
    android:focusableInTouchMode="true"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_center">

            <ImageView
                android:id="@+id/iv_logo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="?attr/actionBarSize"
                android:src="?attr/logo_title_app"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ib_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_48dp"
                    android:layout_marginRight="@dimen/_24dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_8"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_weight="1"
                        android:src="?attr/b_signup_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8"
                        android:text="@string/register"
                        android:textColor="?attr/color_sign_in"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_log_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_24dp"
                    android:layout_marginRight="@dimen/_48dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_8"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_weight="1"
                        android:src="?attr/start_b_login__app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8"
                        android:text="@string/log_in"
                        android:textColor="?attr/color_keep"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_36dp"
                    android:layout_marginRight="@dimen/_36dp"
                    android:layout_marginTop="@dimen/_24dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_or"
                        android:background="@color/color_line"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_1"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_or"
                        android:background="@color/color_line"/>

                    <TextView
                        android:id="@+id/tv_or"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/or"
                        android:textColor="@color/color_line"
                        android:textSize="@dimen/_14sp"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/ib_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_24dp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4"
                    android:paddingLeft="@dimen/_36dp"
                    android:paddingRight="@dimen/_36dp"
                    android:paddingTop="@dimen/_4"
                    android:text="@string/register_later"
                    android:textColor="@color/color_default_tab_light"/>

                <LinearLayout
                    android:id="@+id/ib_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_8"
                    android:paddingLeft="@dimen/_36dp"
                    android:paddingRight="@dimen/_36dp"
                    android:paddingTop="@dimen/_8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_16"
                        android:src="@drawable/facebook_login"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/log_in_with_facebook"
                        android:textColor="?attr/color_fb"
                        android:textSize="@dimen/_14sp"/>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_login_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/background_app"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/prog_bar_white"
                android:indeterminateDuration="1500"/>

        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/activity_login"/>

    <include layout="@layout/activity_reset_password"/>

</RelativeLayout>
