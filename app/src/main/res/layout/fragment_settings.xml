<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:background="?attr/background_app"
    tools:context="com.lucerotech.aleksandrp.w8monitor.profile.fragment.SettingsFragment">

    <include
        android:id="@+id/tool_bar_profile"
        layout="@layout/custom_toolbar"/>

    <TextView
        android:id="@+id/tv_title_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_profile"
        android:layout_centerInParent="true"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:gravity="center"
        android:textColor="?attr/color_text_title_app"
        android:textSize="@dimen/_18sp"/>

    <TextView
        android:id="@+id/tv_title_top_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_profile"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_16"
        android:layout_marginTop="@dimen/_8"
        android:textColor="?attr/color_light_text_app"
        android:textSize="@dimen/_14sp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_title_buttom_top_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_top_settings"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_16"
        android:textColor="?attr/color_light_text_app"
        android:textSize="@dimen/_14sp"
        android:visibility="invisible"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title_top_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_b_heigh_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_heigh_app"/>

            <ImageView
                android:id="@+id/iv_b_bodytype_2_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_bodytype_2_app"/>

            <ImageView
                android:id="@+id/iv_b_male_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_male_app"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_b_dob_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_dob_app"/>

            <ImageView
                android:id="@+id/iv_b_metric2_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_metric2_app"/>

            <ImageView
                android:id="@+id/iv_b_reset_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_reset_app"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_b_language_en_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_language_en_app"/>

            <ImageView
                android:id="@+id/iv_b_scale_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_scale_app"/>

            <ImageView
                android:id="@+id/iv_b_help_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_help_app"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_b_mode2_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_mode2_app"/>

            <ImageView
                android:id="@+id/iv_b_logout_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16"
                android:layout_weight="1"
                android:src="?attr/b_logout_app"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
