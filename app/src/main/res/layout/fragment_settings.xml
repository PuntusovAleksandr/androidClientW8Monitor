<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:background="?attr/background_app"
    tools:context=".fragments.profile.fragment.SettingsFragment">

    <include
        android:id="@+id/tool_bar_profile"
        layout="@layout/custom_toolbar"/>

    <TextView
        android:id="@+id/tv_title_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_profile"
        android:layout_centerInParent="true"
        android:layout_marginLeft="?attr/actionBarSize"
        android:layout_marginRight="?attr/actionBarSize"
        android:gravity="center"
        android:textColor="?attr/color_text_title_app"
        android:textSize="@dimen/_18sp"/>

    <TextView
        android:id="@+id/tv_title_top_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_profile"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_16"
        android:layout_marginTop="@dimen/_8"
        android:textColor="?attr/color_light_text_app"
        android:textSize="@dimen/_14sp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_title_buttom_top_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_fragment"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_16"
        android:textColor="?attr/color_light_text_app"
        android:textSize="@dimen/_14sp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title_fragment"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="?attr/actionBarSize"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16"
                    android:src="?attr/b_personal_nonactive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal"
                    android:textColor="?attr/color_light_text_description"
                    android:textSize="@dimen/_16sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="?attr/actionBarSize"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16"
                    android:layout_weight="1"
                    android:src="?attr/b_account_nonactive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    android:textColor="?attr/color_light_text_description"
                    android:textSize="@dimen/_16sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="?attr/actionBarSize"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16"
                    android:layout_weight="1"
                    android:src="?attr/b_help_nonactive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    android:textColor="?attr/color_light_text_description"
                    android:textSize="@dimen/_16sp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_center_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1"
            android:layout_marginBottom="@dimen/_16"
            android:layout_marginLeft="@dimen/_16"
            android:layout_marginRight="@dimen/_16"
            android:background="?attr/colorHint_app"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_help_personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iv_b_heigh_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_heigh_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_heigh_app"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/height"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_iv_b_dob_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_dob_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_dob_app"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/age"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_b_male_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_male_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_male_app"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/gender"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iv_b_bodytype_2_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_bodytype_2_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_bodytype_1_app"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/activity_level"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_b_metric2_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_metric2_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_metric_app"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/measurements"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_14sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_target_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_target_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_targetweight"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/target_weight"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_help_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iv_google_fit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_google_fit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="@drawable/b_health_off_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/google_fit"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_b_scale_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_scale_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_scale_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profiles"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_b_mode2_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_mode2_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_mode1_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_iv_b_reset_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_b_reset_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_reset_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_signup_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registration"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_iv_b_logout_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_logout_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_logout_app"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_help_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_chat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_help_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_instruction"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_b_help_web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_web"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/web"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:src="?attr/b_chat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_instruction"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="?attr/actionBarSize"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16"
                        android:layout_weight="1"
                        android:src="?attr/b_web"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/web"
                        android:textColor="?attr/color_light_text_description"
                        android:textSize="@dimen/_16sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_login_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_app"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/prog_bar_white"
            android:indeterminateDuration="1500"/>

    </RelativeLayout>


</RelativeLayout>
