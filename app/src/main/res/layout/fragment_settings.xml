<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                tools:context="com.lucerotech.aleksandrp.w8monitor.profile.fragment.SettingsFragment">


    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25"
            android:text="@string/turn_on_bluetooth"
            android:textColor="@color/color_light_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_b_heigh_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_heigh_dark"/>

                <ImageView
                    android:id="@+id/iv_b_bodytype_2_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_bodytype_2_dark"/>

                <ImageView
                    android:id="@+id/iv_b_male_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_male_dark"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_b_dob_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_dob_dark"/>

                <ImageView
                    android:id="@+id/iv_b_metric2_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_metric2_dark"/>

                <ImageView
                    android:id="@+id/iv_b_reset_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_reset_dark"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_b_language_en_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_language_en_dark"/>

                <ImageView
                    android:id="@+id/iv_b_scale_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_scale_dark"/>

                <ImageView
                    android:id="@+id/iv_b_help_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_help_dark"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_b_mode2_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_mode2_dark"/>

                <ImageView
                    android:id="@+id/iv_b_logout_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_25"
                    android:layout_weight="1"
                    android:src="@drawable/b_logout_dark"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
